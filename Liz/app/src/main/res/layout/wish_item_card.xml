<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5sp"
    android:padding="4sp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="3sp">

        <TextView
            android:id="@+id/id_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="ID"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="108dp"
            android:layout_height="108dp"

            android:layout_alignParentStart="true"

            android:transitionName="@string/changeImage" />

        <TextView
            android:id="@+id/name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="5sp"
            android:layout_marginTop="25sp"
            android:layout_toEndOf="@id/image_item"

            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/value_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/name_item"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_toEndOf="@id/image_item"

            android:text="Value"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/delete_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40sp"
            android:layout_marginEnd="15sp"
            android:src="@drawable/ic_delete" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/image_item"
            android:layout_marginTop="2sp"

            android:background="@drawable/bg_app_gradient_horizon" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>