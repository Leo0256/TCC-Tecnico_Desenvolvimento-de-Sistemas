<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/negative_progress"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:progress="100"
        android:progressDrawable="@drawable/leftover_shape_background" />

    <ProgressBar
        android:id="@+id/progress_leftover"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:progress="50"
        android:progressDrawable="@drawable/leftover_shape" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/progress_leftover"
        android:layout_alignEnd="@id/progress_leftover"
        android:layout_marginStart="20dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:maxWidth="160dp"
        android:text="R$"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_leftover"
        android:layout_alignStart="@id/progress_leftover"
        android:layout_alignEnd="@id/progress_leftover"
        android:layout_marginTop="-10dp"
        android:gravity="center_horizontal"
        android:text="0%"
        android:textColor="@color/dark_gray"
        android:textSize="15sp" />


</RelativeLayout>